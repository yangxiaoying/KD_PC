        <script>
            // 获取看典号信息
            var node = $('#face');
            var orgId = node.attr('data-org-id');
            var url = '/detail/getOrgIdById/' + orgId;
            $.ajax({
                url: url,
                dataType: "json", //返回格式
                type: "get",
                success: function (response) {
                    if (response) {
                        node.children('.bg').children('img').attr('src', response.backgroundpic);
                        node.children('.info').find('.avatar').attr('src', response.logopic);
                        node.children('.info').children('p').eq(0).children('a').html(response.orgname);
                        node.children('.info').children('p').eq(1).html(response.memo);
                        node.children('.info').children('p').eq(2).html(response.totalfans + '粉丝');
                    } else {
                        console.log('看典号数据错误！')
                    }
                },
                error: function (error) {
                    //请求出错处理
                    console.log(error);
                }
            });
        </script>

