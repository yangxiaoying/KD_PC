            //             if (j < 5) { //最多显示5个
            //                 //删除关键词后面带的数字
            //                 var tempIndex = keywordArr[j].indexOf(':');
            //                 if (tempIndex != -1) {
            //                     keywordStr += '<span><a href="' + encodeURI('/literature/libraryResult?album=' + album + '&fulltext=' + keywordArr[j].substring(0, tempIndex)) + '">' + keywordArr[j].substring(0, tempIndex) + '</a></span>';
