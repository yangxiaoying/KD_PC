    // 获取每个列表下的文献图片
    function getLiteraturePic(callback) {
        var literaturePicsUrl = '/literature/getLiteraturePics?filename=' + listDom.children('.item').eq(count).attr('data-file-name');
        ajaxRequest[count] = $.ajax({
            url: literaturePicsUrl,
            dataType: "json",
            type: "GET",
            success: function (response) {
                // console.log(response)
                if (response.Code == 1) {
                    var imgList = response.ImgUrls;
                    // 图片存在
                    if (imgList && imgList.length > 0) {
                        callback(imgList);
                    }
                    if (count < items.length - 1) {
                        count++;
                        getLiteraturePic(handlePics);
                    } else {
                        count = 0;
                    }
                } else {
                    console.log('请检查获取文献图片接口！');
                }
            },
            error: function (error) {
                //请求出错处理
                console.log(error);
            }
        });
    }

    // 停止所有ajax请求
    function stopAjaxRequests(request, callback) {
        // 停止递归
        if (request[count]) {
            request[count].abort();
            count = 0;
            callback();
        }
    }

    // 获取主列表数据并绑定页码
    function getLibraryResultList(album, searchWordName, searchWordValue, pageNum, order, filterType, fieldValue, queryStr) {
        var order = order || 0;
        var filterType = filterType || null;
        var fieldValue = fieldValue || null;
        var getLibraryResultListUrl = encodeURI('/literature/libraryResult?album=' + album + '&' + queryStr + '&pageNum=' + pageNum + '&isAsync=1&order=' + order + '&field=' + filterType + '&fieldValue=' + fieldValue);
        $.ajax({
            url: getLibraryResultListUrl,
            dataType: "json", //返回格式
            type: "GET",
            success: function (response) {
                // console.log(response)
                if (response.code == 0) {
                    var list = response.data.list;
                    if (list && list.length > 0) {
                        $('#prevNextPage').show();
                        var str = handleList(list, searchWordValue);
                        $('.listWrap').html(str);
                        getLiteraturePic(handlePics);

                        // 页码
                        var pageStr = $.kd.outputPager(response.data.total, 10, 5, pageNum);
                        var prevNextPageStr = $.kd.outputPrevNextPager(response.data.total, 10, 5, pageNum);
                        $('.rpage').html(pageStr);
                        $('#prev').html(prevNextPageStr.prevPage);
                        $('#next').html(prevNextPageStr.nextPage);
                        $('#currentPage').html(pageNum);
                        $('#sumPage').html(Math.ceil(response.data.total / 10));

                        // 绑定页码
                        $('.rpage a,#prev a,#next a').bind('click', function () {
                            $('body,html').animate({scrollTop: 0}, time);
                            var pageNum = $(this).attr('data-page');
                            stopAjaxRequests(ajaxRequest, function () {
                                getLibraryResultList(album, searchWordName, searchWordValue, pageNum, order, filterType, fieldValue, queryStr);
                            })

                        })
                    }
                    else {
                        $('.listWrap').html('暂时没有数据！');
                        $('.rpage').html('');
                        $('#prevNextPage').hide();
                    }
                } else {
                    console.log('请检查搜索文献列表接口！')
                }
                list = null;
            },
            error: function (error) {
                //请求出错处理
                console.log(error);
            }
        });
    }


    // 期刊
    // var keyword = $('#hiddenSearchValue').val();
    var magaName = $('#searchWordValue').val();
    var period = $('#period');
    var topsA = $('.tops .tab li a');
