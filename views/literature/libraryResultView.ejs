    function getPeriodResult(magaName, pageNum, orderby, dbCode) {
        var pageNum = pageNum || 1;
        var orderby = orderby || 0;
        var dbCode = dbCode || 'V;U;T';
        var periodUrl = encodeURI('/literature/library/period?magaName=' + magaName + '&isAsync=1&pageSize=25&pageNum=' + pageNum + '&orderby=' + orderby + '&dbCode=' + dbCode);
        $.ajax({
            url: periodUrl,
            dataType: "json", //返回格式
            type: "get",
            success: function (response) {
                console.log(response)
                if (response.code == 0) {
                    $('#periodCount').html(response.data.totalcount);
                    if (response.data.totalcount > 0) {
                        var list = response.data.list;
                        var str = '';
                        for (var i = 0; i < list.length; i++) {
                            str += '<li>' +
                                '       <a target="_blank" title="' + list[i].Name + '" href="/detail/periodDetail/'+ list[i].Code +'"><img src="http://c61.cnki.net/CJFD/big/' + list[i].Code + '.jpg"></a>' +
                                '       <p><a target="_blank" title="' + list[i].Name + '" href="/detail/periodDetail/'+ list[i].Code +'">' + list[i].Name + '</a></p>' +
                                // '       <p>' + list[i].Name + '</p>' +
                                '   </li>';
                        }
                        period.children('ul').html(str);
                        // 页码
                        var pageStr = $.kd.outputPager(response.data.totalcount, 25, 5, pageNum);
                        var prevNextPageStr = $.kd.outputPrevNextPager(response.data.totalcount, 25, 5, pageNum);
                        $('#periodPrev').html(prevNextPageStr.prevPage);
                        $('#periodNext').html(prevNextPageStr.nextPage);
                        $('#periodCurrentPage').html(pageNum);
                        $('#periodSumPage').html(Math.ceil(response.data.totalcount / 25));
                        var periodPage = $('.rpage-period');
                        periodPage.html(pageStr);
                        // 绑定页码
                        $('.rpage-period a, #periodPrev a,#periodNext a').click(function () {
                            var pageNum = $(this).attr('data-page');
                            var dbCode = $('#album').val();
                            getPeriodResult(magaName, pageNum, orderby, dbCode);
                            // 回顶部
                            $('body,html').animate({scrollTop: 0}, time);
                        })

                    } else {
                        //
                    }
                } else {
                    cosole.log('请检查获取期刊信息列表！');
                }
            },
            error: function (error) {
                //请求出错处理
                console.log(error);
            }
        });
    }

