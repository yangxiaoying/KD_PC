                                <div class="bottom clearfix">
                                    <a href="/kdh/home/<%= viewModel.data.recommendPersonalList[i].orgid %>" class="source left" target="_blank"><img src="<%= viewModel.data.recommendPersonalList[i].orglogopic %>"/><span class="left"><%=viewModel.data.recommendPersonalList[i].orgname %></span></a>
                                    <span class="time right"><%= 
ejsFunctions.dateFormat(viewModel.data.recommendPersonalList[i].submittime) %></span>
                                </div>
